{% extends "layouts/admin-default.html.twig" %}
{% block title %}Administration{% endblock %}

{% block body %}
          <div class="align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Liste des commentaires validés</h1>
            {% if flash('success') %}
              <div class="alert alert-success" role="alert">
                {{ flash('success') }}
              </div>
            {% endif %}
            <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Commentaire</th>
                  <th scope="col">Article</th>
                  <th scope="col">Auteur</th>
                  <th scope="col">Date de création</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                {% if commentsValidated is not empty %}
                  
                  {% for commentValidated in commentsValidated  %}
                    <tr>
                      <td>{{ commentValidated.commentContent }}</td>
                      <td>{{ commentValidated.title }}</td>
                      <td>{{ commentValidated.pseudo }}</td>
                      <td>{{ commentValidated.commentCreationDate|date('d/m/Y H:i', 'Europe/Paris') }}</td>
                      <td>
                        <a href="/admin/commentaires/desapprove/{{ commentValidated.commentId }}" class="btn btn-danger">Désapprouver</a>
                      </td>
                    </tr>
                  {% endfor %}
                {% else %}
                  <p> Aucuns commentaires pour le moment </p>
                {% endif %}
              </tbody>
            </table>
            </div>
          </div>
{% endblock %}