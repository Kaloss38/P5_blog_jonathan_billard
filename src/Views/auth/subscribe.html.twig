{% extends "layouts/default.html.twig" %}
{% block title %} Inscription {% endblock %}

{% block body %}
    <div class="container form-auth">
  <div class="row">
    <h1 class="text-center mt-4 display-4">Inscription</h1>
    {% if flash('success') %}
        <div class="alert alert-success" role="alert">
            {{ flash('success') }}
        </div>
    {% elseif flash('error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash('error') }}
        </div>    
    {% endif %}
    <div class="d-md-flex d-lg-flex justify-content-center">
      <form class="col-sm-12 col-md-8 col-lg-6 mt-5 mb-5 p-4 shadow border" form method="POST" action="/subscribe" enctype="multipart/form-data" role="form">
        <div class="form-group">
          <label for="inputEmail3" class="control-label">
            Votre E-mail*</label>
            <input name="email" type="email" class="form-control mt-2" id="inputUser" placeholder="Entrez votre e-mail" required>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="control-label mt-2">
            Votre pseudo*</label>
            <input name="pseudo" type="text" class="form-control mt-2" id="inputUser" placeholder="Entrez votre pseudo" required>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="control-label mt-2">
            Votre nom*</label>
            <input name="firstname" type="text" class="form-control mt-2" id="inputUser" placeholder="Entrez votre nom" required>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="control-label mt-2">
            Votre prénom*</label>
            <input name="lastname" type="text" class="form-control mt-2" id="inputUser" placeholder="Entrez votre prénom" required>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="control-label mt-2">
            Entrez un mot de passe*</label>
            <input name="password" type="password" class="form-control mt-2" id="inputUser" placeholder="Entrez votre mot de passe" required>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="control-label mt-2">
            Confirmez votre mot de passe*</label>
            <input name="confirmPassword" type="password" class="form-control mt-2" id="inputPsw" placeholder="Entrez à nouveau votre mot de passe" required>
        </div>
        <div class="form-group text-center mt-3">
          <input type="checkbox" name="legalMentions"> J'ai lu et j'accepte les <a href="/mentions-legales" target="_blank">mentions légales</a>
        </div>
        <div class="form-group">
          <div class="text-center mt-4">
            <button type="submit" value="submit" name="submit" class="btn btn-primary">
              Inscription</button>
          </div>
        </div>
      </form>
      </div>
  </div>
</div>
{% endblock %}