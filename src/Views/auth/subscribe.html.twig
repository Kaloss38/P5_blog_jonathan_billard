{% extends "layouts/default.html.twig" %}
{% block title %} Inscription {% endblock %}

{% block body %}
    <div class="container">
  <div class="row">
    <h1 class="text-center">Inscription</h1>
    {% if flash('success') %}
        <div class="alert alert-success" role="alert">
            {{ flash('success') }}
        </div>
    {% elseif flash('error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash('error') }}
        </div>    
    {% endif %}
    <div class="login-wrap">
      <form class="form-horizontal" form method="POST" action="/subscribe" enctype="multipart/form-data" role="form">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">
            Votre E-mail*</label>
          <div class="col-sm-9">
            <input name="email" type="email" class="form-control" id="inputUser" placeholder="E-mail" required>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">
            Votre pseudo*</label>
          <div class="col-sm-9">
            <input name="pseudo" type="text" class="form-control" id="inputUser" placeholder="Pseudo" required>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">
            Votre nom*</label>
          <div class="col-sm-9">
            <input name="firstname" type="text" class="form-control" id="inputUser" placeholder="Pseudo" required>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">
            Votre pr√©nom*</label>
          <div class="col-sm-9">
            <input name="lastname" type="text" class="form-control" id="inputUser" placeholder="Pseudo" required>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">
            Entrez un mot de passe*</label>
          <div class="col-sm-9">
            <input name="password" type="password" class="form-control" id="inputUser" placeholder="Mot de passe" required>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-3 control-label">
            Confirmez votre mot de passe*</label>
          <div class="col-sm-9">
            <input name="confirmPassword" type="password" class="form-control" id="inputPsw" placeholder="Mot de passe" required>
          </div>
        </div>
        <div class="form-group last">
          <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" value="submit" name="submit" class="btn btn-success btn-sm">
              Inscription</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}