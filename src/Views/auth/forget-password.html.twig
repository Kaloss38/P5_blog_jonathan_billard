{% extends "layouts/default.html.twig" %}
{% block title %} Mot de passe oublié {% endblock %}

{% block body %}
    <div class="container">
  <div class="row">
    <h1 class="text-center">Mot de passe oublié</h1>
    {% if flash('success') %}
        <div class="alert alert-success" role="alert">
            {{ flash('success') }}
        </div>
    {% elseif flash('error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash('error') }}
        </div>    
    {% endif %}
    <div class="login-wrap">
      <form class="form-horizontal" form method="POST" action="/forget-password" enctype="multipart/form-data" role="form">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">
            Votre adresse e-mail</label>
          <div class="col-sm-9">
            <input type="email" name="email" class="form-control" id="inputUser" placeholder="Entrez votre adresse e-mail afin de réinitiliser votre mot de passe" required>
          </div>
        </div>
        <div class="form-group last">
          <div class="col-sm-offset-3 col-sm-9">
            <button name="submit" value="submit" type="submit" class="btn btn-success btn-sm">
              Envoyer</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}