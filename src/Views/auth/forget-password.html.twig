{% extends "layouts/default.html.twig" %}
{% block title %} Mot de passe oublié {% endblock %}

{% block body %}
    <div class="container form-auth">
  <div class="row">
    <h1 class="text-center mt-4 display-4">Mot de passe oublié</h1>
    {% if flash('success') %}
        <div class="alert alert-success" role="alert">
            {{ flash('success') }}
        </div>
    {% elseif flash('error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash('error') }}
        </div>    
    {% endif %}
    <div class="d-md-flex d-lg-flex justify-content-center">
      <form class="col-sm-12 col-md-8 col-lg-6 mt-5 mb-5 p-4 shadow border" form method="POST" action="/forget-password" enctype="multipart/form-data" role="form">
        <div class="form-group">
          <label for="inputEmail3" class="control-label mt-2">
            Votre adresse e-mail</label>
            <input type="email" name="email" class="form-control mt-2" id="inputUser" placeholder="Entrez votre adresse e-mail afin de réinitiliser votre mot de passe" required>
        </div>
        <div class="form-group text-center">
            <button name="submit" value="submit" type="submit" class="btn btn-primary mt-3">
              Envoyer</button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}